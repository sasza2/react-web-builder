{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es2019", "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["src/*"],
      "types": ["types/types"]
    },
    "rootDirs": ["src", "types"],
    "skipLibCheck": true,
    "target": "es5"
  }
}
